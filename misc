        <figure>
        <img src="images/PoussinArcadia.jpg" alt="Nicolas Poussin - Et in Arcadia ego (deuxième version)">
        <figcaption id="Arcadia1">
        </figcaption>
        <script>
            let foot = document.createElement('a');
            foot.setAttribute('id', `footnote-${++footnum}-ref`);
            foot.setAttribute('href', `#footnote-${footnum}`);
            
            foot.textContent = `[${footnum}]`

            let caption = "Nicolas Poussin - Et in Arcadia ego (deuxième version)";

            let result = caption.concat(foot);
            
            document.getElementById("Arcadia1").innerHTML = result;
            console.log(foot)
            </script>
        </figure>
